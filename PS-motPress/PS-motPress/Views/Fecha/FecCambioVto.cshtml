
@{
    ViewBag.Title = "FecCambioVto";
    if (Session["userName"] == null)
    {
        Response.Redirect("/Home/Index");
    }
    else
    {
        if (Session["rol"].Equals("Empleado"))
        {
            Response.Redirect("/Home/Index");
        }
    }
}


<link rel="stylesheet" href="~/Content/posicionGral.css" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

@using (Html.BeginForm())
{
    <div class="contenedor">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="col-lg-1"></div>
                    <div class="col-lg-9">
                        <h2>
                            <strong>
                                Vencimientos
                            </strong>
                        </h2><hr />
                    </div>
                </div>
                <br />
            </div>
        </div>
        <div class="row">
            <div class="col-lg-1"></div>
            <div class="col-lg-11">
                <div class="card">
                    <div class="card-header">
                        <label>Gestión del Vencimientos</label>
                    </div>
                    <div class="card-body">
                        <div class="form-inline" style="text-align:center">
                            <label style="margin-right: 10px;">Seleccionar fecha a modificar</label>
                            <input type="date" id="dtpFecha" class="form-control" />
                            <button type="button" class="btn btn-warning btnNaranjaClaro" id="buscarFecha" style="margin-left:10px">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                    <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                                </svg>
                            </button>
                            <hr />
                            <br /><br /><br />
                        </div>
                        <div class="row" id="verFechaSel" style="display:none">
                            <div class="col-lg-4">
                                <div class="form-inline">
                                    <label>Fecha Seleccionada: </label>
                                    <p style="margin-left:10px; margin-bottom:0px;" id="txtFechaSelec"></p>
                                </div>
                            </div>
                            <div class="col-lg-5">
                                <div class="form-inline">
                                    <label>Día: </label>
                                    <p style="margin-left:10px; margin-bottom:0px;" id="txtFechaSelecTipoDia"></p>
                                </div>
                            </div>
                            <br /><br />
                        </div>
                        <div class="row" id="verNuevaFecha" style="display:none">
                            <div class="col-lg-4">
                                <div class="form-inline">
                                    <label>Próximo día Hábil: </label>
                                    <p id="txtnexFecha" style="margin-left:10px; margin-bottom:0px;"></p>
                                    <input id="txtDisponible" hidden />
                                </div>
                            </div>
                            <div class="col-lg-5">
                                <div class="form-inline">
                                    <label>Día: </label>
                                    <p style="margin-left:10px; margin-bottom:0px;" id="txtnexFechaSelecTipoDia"></p>
                                </div>
                            </div>
                            <hr /><br /><br />
                        </div>
                        <div id="verTitulo" style="display:none">
                            <label  style="font-size:17px;">Cuotas con vencimiento en el día seleccionado</label>
                            <br /><br />
                        </div>
                        <table class="table table-bordered" id="tablaCuotas"></table>
                        <div id="sinResultado"></div>
                        <div class="row" id="verBotones" style="display:none">
                            <div class="col-lg-12">
                                <button id="btnCancel" type="button" class="btn btn-dark" style="float:right">Cancelar</button>
                                <button id="btnActualizar" type="button" class="btn btn-warning btnNaranja" style="float:right; margin-right:10px;">Actualizar Vencimiento</button>
                            </div>
                        </div>
                        <div class="row" id="verBotones1" style="display:none">
                            <div class="col-lg-12">
                                <button id="btnCancel1" type="button" class="btn btn-dark" style="float:right">Cancelar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script src="~/Scripts/Fecha/FecCambioVto.js"></script>
}
