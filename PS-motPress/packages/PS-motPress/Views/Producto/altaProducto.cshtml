@*@model PS_motPress.Models.Producto.ClsProducto*@
@{
    ViewBag.Title = "altaProducto";
    if (Session["userName"] == null)
    {
        Response.Redirect("/Home/Index");
    }
}

<link rel="stylesheet" href="~/Content/posicionGral.css" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
@using (Html.BeginForm("altaProducto", "Producto", FormMethod.Post, new { id = "frm-adjuntar", enctype = "multipart/form-data" }))
{
    <div class="row contenedor" id="todo">
        <div class="col-12">
            <div class="row">
                <div class="col-lg-1"></div>
                <div class="col-lg-9">
                    <h2><strong>Registro de Productos</strong></h2><hr />
                </div>
            </div>
            <br />

            <div class="row">
                <div class="col-lg-1"></div>
                <div class="col-lg-11">
                    <div class="card">
                        <div class="card-header">
                            <label>Datos generales</label>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-lg-4">
                                                <h6 style="float: right">Nombre *</h6>
                                            </div>
                                            <div class="col-lg-7">
                                                <input type="text" class="form-control" id="producto" name="pNombre" required placeholder="Nombre">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-lg-4">
                                                <h6 style="float: right">Modelo/Año *</h6>
                                            </div>
                                            <div class="col-lg-7">
                                                <input type="text" class="form-control" id="anio" name="pModelo" required placeholder="Año">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-lg-4">
                                                <h6 style="float: right">Categoría *</h6>
                                            </div>
                                            <div class="col-lg-7">
                                                <select class="form-control" name="pIdTipo" required id="tipo"></select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-lg-4">
                                                <h6 style="float: right">Marca *</h6>
                                            </div>
                                            <div class="col-lg-7">
                                                <select class="form-control" name="pIdMarca" required id="marca"></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-lg-4">
                                                <h6 style="float: right">Precio *</h6>
                                            </div>
                                            <div class="col-lg-7">
                                                <input type="text" class="form-control input-number" name="pPrecio" required id="precio" placeholder="Precio">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-lg-4">
                                                <h6 style="float: right">Color *</h6>
                                            </div>
                                            <div class="col-lg-7">
                                                <select class="form-control" name="pIdColor" required id="color"></select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-lg-4">
                                                <h6 style="float: right">Descripción</h6>
                                            </div>
                                            <div class="col-lg-7">
                                                <textarea class="form-control" id="descrp" name="pDescripcion" style="max-height: 100px; min-height: 38px; height: 38px;" aria-label="With textarea"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="card">
                        <div class="card-header">
                            <label>Ficha Técnica</label>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-lg-4">
                                                <h6 style="float: right">Motor *</h6>
                                            </div>
                                            <div class="col-lg-7">
                                                <input type="text" class="form-control" name="pMotor" required id="motor" placeholder="Motor">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-lg-4">
                                                <h6 style="float: right">Cilindrada *</h6>
                                            </div>
                                            <div class="col-lg-7">
                                                <input type="text" class="form-control" name="pCilindrada" required id="cilindro" placeholder="Cilindrada">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-lg-4">
                                                <h6 style="float: right">Arranque *</h6>
                                            </div>
                                            <div class="col-lg-7">
                                                <input type="text" class="form-control" name="pArranque" required id="arranque" placeholder="Arranque">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-lg-4">
                                                <h6 style="float: right">Kilometraje *</h6>
                                            </div>
                                            <div class="col-lg-7">
                                                <input type="text" class="form-control" name="pKilometros" required id="km" placeholder="Kilometraje">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-lg-4">
                                                <h6 style="float: right">Combustible *</h6>
                                            </div>
                                            <div class="col-lg-7">
                                                <input type="text" class="form-control" name="pCombustible" required id="combustible" placeholder="Combustible">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-lg-4">
                                                <h6 style="float: right">Caja *</h6>
                                            </div>
                                            <div class="col-lg-7">
                                                <select class="form-control" name="pIdCaja" required id="caja"></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="card">
                        <div class="card-header">
                            <label>Imágenes</label>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-lg-4">
                                                <h6 style="float: right">Imagen *</h6>
                                            </div>
                                            <div class="col-lg-7">
                                                <div class="custom-file">
                                                    <input type="file" id="imgGrande" class="custom-file-input" required name="ImgMiniatura" aria-describedby="inputGroupFileAddon01">
                                                    <label class="custom-file-label" for="inputGroupFile01">Elegir</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-lg-4">
                                                <h6 style="float: right">Miniatura *</h6>
                                            </div>
                                            <div class="col-lg-7">
                                                <div class="custom-file">
                                                    <input type="file" class="custom-file-input" required name="ImgFile" id="ImgFile" aria-describedby="inputGroupFileAddon01">
                                                    <label class="custom-file-label" for="inputGroupFile01">Elegir</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br /><br />
            <div class="row">
                <div class="col-lg-12" style="text-align: center" id="btnConfir">
                    <button type="button" id="btnGuardar" class="btn btn-warning btnNaranja">Registrar</button>
                    <button class="btn btn-dark btnNegro" type="button" id="btnClose">Cancelar</button>
                    <button class="btn btn-warning btnNaranjaClaro" id="btnCargando" style="display:none" type="button" disabled><span class="spinner-border spinner-border-sm"></span>Cargando...</button>
                </div>
            </div>
            <br /><br />
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>
    <script src="~/Scripts/Producto/altaProducto.js"></script>
}

